{
  "name": "icon-generator-app",
  "version": "1.0.0",
  "description": "SVG to PNG Icon Generator for Mobile Apps",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dev": "tsc && electron . --dev",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "^20.0.0",
    "@types/sharp": "^0.31.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@resvg/resvg-js": "^2.6.2",
    "png2icons": "^2.0.1",
    "posthog-js": "^1.276.0",
    "sharp": "^0.33.5"
  },
  "build": {
    "appId": "com.example.icon-generator",
    "productName": "Icon Generator",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*"
    ],
    "mac": {
      "category": "public.app-category.graphics-design"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
